{
  "name": "@rauschma/helpers",
  "version": "1.0.0",
  "type": "module",
  "author": "Axel Rauschmayer",
  "repository": "github:rauschma/helpers",
  "license": "MIT",
  "exports": {
    "./*": "./dist/src/*"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "watch": "tsc --watch",
    "clean": "shx rm -rf ./dist/*",
    "\n========== Testing ==========": "",
    "test": "mocha --enable-source-maps --ui qunit",
    "testall": "mocha --enable-source-maps --ui qunit \"./dist/**/*_test.js\"",
    "\n========== Publishing ==========": "",
    "dry-run": "npm publish --dry-run",
    "prepublishOnly": "npm run build",
    "pack": "npm pack && tar --list --file rauschma-helpers-*.tgz"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "memfs": "^4.6.0",
    "mocha": "^10.2.0",
    "quibble": "^0.9.1"
  }
}
